{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Next.js Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd ionic-nextjs-app && npm run dev",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/ionic-nextjs-app",
      "sourceMaps": true,
      "userDataDir": false
    },
    {
      "name": "Debug Next.js with Inspector",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/ionic-nextjs-app/node_modules/.bin/next",
      "args": [
        "dev"
      ],
      "cwd": "${workspaceFolder}/ionic-nextjs-app",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "--inspect=9229"
      ],
      "restart": true
    }
  ]
}